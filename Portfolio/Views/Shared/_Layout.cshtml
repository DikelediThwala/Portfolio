<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dikeledi's Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">
</head>
<body>
    <header style="background-color: rgba(255, 255, 255, 0.1);">

        @if (ViewData["HideNavbar"] == null || !Convert.ToBoolean(ViewData["HideNavbar"]))
        {
            <nav class="navbar navbar-expand-sm navbar-light mb-3">
                <div class="container-fluid d-flex align-items-center">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <img src="@Url.Content("~/Images/Logo.png")" style="width: 120px; height: 120px; margin-left: 150px;" />

@*                     <img src="/Images/Logo.png" style="width: 120px; height: 120px;margin-left: 150px;" />
 *@
                    <div class="collapse navbar-collapse justify-content-center">
                        <ul class="navbar-nav" >
                            <li class="nav-item">
                                <a class="nav-link text-white nav-link-hover" style="font-size: 1.25rem;" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item" >
                                <a class="nav-link text-white nav-link-hover" style="font-size: 1.25rem;" href="#about-me">About Me</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white nav-link-hover" style="font-size: 1.25rem;" href="#Education">Education</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white nav-link-hover" style="font-size: 1.25rem;" asp-controller="Projects" asp-action="Index">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white nav-link-hover" style="font-size: 1.25rem;" asp-controller="Certification" asp-action="Index">Certifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white nav-link-hover" style="font-size: 1.25rem;" href="mailto:thwaladikeledi15@gmail.com">Contact Me</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: rgba(255, 255, 255, 0.1);">
        <div class="container">
            &copy; 2024 - Portfolio
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

